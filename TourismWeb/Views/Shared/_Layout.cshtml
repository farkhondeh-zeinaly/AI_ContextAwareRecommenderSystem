<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - سیستم توصیه گر توریسم</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("سیستم توصیه گر توریسم", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("صفحه اصلی", "Index", "Home")</li>
                    <li>@Html.ActionLink("کاربران", "Users", "Tourism")</li>
                    <li>@Html.ActionLink("هستی شناسی", "Ontology", "Tourism")</li>
                    <li>@Html.ActionLink("نقاط علاقه مندی", "Pois", "Tourism")</li>
                    <li>@Html.ActionLink("درباره", "About", "Home")</li>
                    <li>@Html.ActionLink("تماس", "Contact", "Home")</li>
                    <li>@Html.ActionLink("خروج", "Logout", "Account")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @if (TempData["Message"] != null)
        {
            var message = (TourismWeb.Models.ViewMessage)TempData["Message"];

            switch (message.MessageType)
            {
                case TourismWeb.Models.ViewMessageType.Info:
                    <div class="alert alert-info">@message.Message</div>
                    break;
                case TourismWeb.Models.ViewMessageType.Success:
                    <div class="alert alert-success">@message.Message</div>
                    break;
                case TourismWeb.Models.ViewMessageType.Warning:
                    <div class="alert alert-warning">@message.Message</div>
                    break;
                case TourismWeb.Models.ViewMessageType.Danger:
                    <div class="alert alert-danger">@message.Message</div>
                    break;
                default:
                    <div class="aler">@message.Message</div>
                    break;
            }
        }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Tourism Recommender System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
