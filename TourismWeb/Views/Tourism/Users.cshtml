@model List<tbl_User>

@{
    ViewBag.Title = "کاربران";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>
    کاربران @*<a class="btn btn-link" href="@Url.Action("AddPoi")">Add new POI</a>*@
